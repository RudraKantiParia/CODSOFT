# Define an empty list to store tasks
tasks = []

# Function to add a task
def add_task():
    task_name = input("Enter task name: ")
    task_description = input("Enter task description: ")
    tasks.append({"Task Name": task_name, "Description": task_description})
    print("Task added successfully!")

# Function to delete a task
def delete_task():
    task_name = input("Enter the task name you want to delete: ")
    found = False
    for task in tasks:
        if task["Task Name"] == task_name:
            tasks.remove(task)
            found = True
            print("Task deleted successfully!")
            break
    if not found:
        print("Task not found.")

# Function to display all tasks
def show_tasks():
    if tasks:
        print("Tasks:")
        for idx, task in enumerate(tasks, start=1):
            print(f"{idx}. {task['Task Name']}: {task['Description']}")
    else:
        print("No tasks available.")

# Main menu loop
while True:
    print("\nTo-Do List Menu:")
    print("1. Add your Task")
    print("2. Delete your Task")
    print("3. Show your Tasks")
    print("4. For Exit")
    choice = input("Enter your choice (1-4): ")

    if choice == "1":
        add_task()
    elif choice == "2":
        delete_task()
    elif choice == "3":
        show_tasks()
    elif choice == "4":
        print("Thank You! Exiting...")
        break
    else:
        print("Sorry!,Invalid choice. Please enter a valid option.")
